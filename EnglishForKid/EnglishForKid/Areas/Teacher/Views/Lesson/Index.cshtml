    $(document).ready(function () {
        var table = $('#myLessonTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'collection',
                    text: 'Export',
                    buttons: ['pdfHtml5', 'csvHtml5', 'copyHtml5', 'excelHtml5']
                }
            ]
        });

        $('#btn-pdf').on('click', function () {
            table.button('0-0').trigger();
        });  
    });
</script>


