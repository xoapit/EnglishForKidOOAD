@using EnglishForKid.Models.ViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    RoleViewModel myRole = ViewBag.MyRoles;
}
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">INFORMATION</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body padding-large">
        <input type="text" id="userID" hidden value="@myRole.UserID" />
        <div class="col-md-4 col-md-offset-4">
            <label>Username: </label>
            <label>@myRole.Username</label>
        </div>
        <div class="col-md-4 col-md-offset-4">
            <label>Full Name: </label>
            <label>@myRole.FullName</label>
        </div>
    </div>
    <div class="clearfix"></div>
    <hr />
</div>

<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">ROLE MANAGEMENT</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body padding-large">
        <div class="row">
            <div class="col-md-4 text-center">
                <input type="checkbox" value="" id="isStudent" checked="@myRole.IsStudent" />
                <label>Student</label>
            </div>
            <div class="col-md-4 text-center">
                <input type="checkbox" value="" id="isTeacher" checked="@myRole.IsTeacher" />
                <label>Teacher</label>
            </div>
            <div class="col-md-4 text-center">
                <input type="checkbox" value="" id="isAdmin" checked="@myRole.IsAdmin" />
                <label>Admin</label>
            </div>
        </div>
        <button id="btnSaveRole" class="btn btn-primary btn-label-left pull-right">
            Save
        </button>
    </div>
    <div class="clearfix"></div>
    <hr />
</div>

