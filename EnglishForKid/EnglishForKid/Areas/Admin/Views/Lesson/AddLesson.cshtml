
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/table.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>AddLesson</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.11.2.min.js"></script>
</head>
<body>
    <h3 style="color: #5a738e" align="center">THÊM BÀI HỌC</h3>
    <form>
        <div class="form-group row">
            <div class="col-sm-2"></div>
            <label for="" class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="" value="">
            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2"></div>
            <label for="" class="col-sm-2 col-form-label">Pictute</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="" value="">
            </div>
            <div class="col-sm-2">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2"></div>
            <label for="" class="col-sm-2 col-form-label">Category</label>
            <div class="col-sm-6">
                <select class="form-control" id="">
                    <option>Vocabulary</option>
                    <option>Reading</option>
                    <option>Listening</option>
                </select>
            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2"></div>
            <label for="" class="col-sm-2 col-form-label">Content</label>
            <div class="col-sm-6">
                <textarea class="form-control" rows="5" id=""></textarea>
            </div>
            <div class="col-sm-2">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2"></div>
            <label for="" class="col-sm-2 col-form-label">Exercise</label>
            <div class="col-sm-6">
                <textarea class="form-control" rows="5" id=""></textarea>
            </div>
            <div class="col-sm-2">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2"></div>
            <label for="" class="col-sm-2 col-form-label">Answer</label>
            <div class="col-sm-6">
                <textarea class="form-control" rows="5" id=""></textarea>
            </div>
            <div class="col-sm-2">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2"></div>
            <label for="" class="col-sm-2 col-form-label">Discussion</label>
            <div class="col-sm-6">
                <textarea class="form-control" rows="5" id=""></textarea>
            </div>
            <div class="col-sm-2">
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
            <div class="col-sm-4"></div>
            <div class="col-sm-2">
                <button type="submit" class="btn btn-default btn-label-left">
                    <span><i class="fa fa-clock-o txt-danger"></i></span>
                    ADD LESSON
                </button>
            </div>
            <div class="col-sm-1"></div>
            <div class="col-sm-2">
                <button type="cancel" class="btn btn-warning btn-label-left">
                    <span><i class="fa fa-clock-o"></i></span>
                    CANCEL
                </button>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </form>

</body>
</html>

