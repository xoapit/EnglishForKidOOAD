
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<button type="button" style="display:none" id="btnLoginTrigger" class="view-Feedback btn btn-success" data-toggle="modal" data-target="#myModalLogin">Detail</button>

<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
    $(document).ready(function () {
        $('#btnLoginTrigger').trigger('click');
    });
</script>

<div class="modal fade" data-backdrop="static" id="myModalLogin" role="dialog">
    <div class="modal-dialog modal-sm">
        <!-- Modal content-->
        <div class="modal-content" style="margin:2%;">
            <div class="modal-header bg-red">
                <h4 class="modal-title">LOGIN</h4>
            </div>
            <div class="modal-body">
                <div class="box-body padding-large">
                    <p class="login-box-msg">Sign in to start your session</p>

                    <form action="../../index2.html" method="post">
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" placeholder="Username">
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="password" class="form-control" placeholder="Password">
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-8">
                                <div class="checkbox icheck" style="margin-left:20px;">
                                    <label>
                                        <input type="checkbox"> Remember Me
                                    </label>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-xs-4">
                                <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>