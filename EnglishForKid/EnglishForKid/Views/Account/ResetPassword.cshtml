@model EnglishForKid.Models.ViewModels.ResetPasswordViewModel

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout_ST.cshtml";
}

<div class="panel border margin-top-small">
    <div class="box-header red text-white text-center">
        <label><span class="glyphicon glyphicon-refresh"></span>  Forgot Password</label>
    </div>
    <div class="panel-body">
        <div class="col-md-6 col-md-offset-3 col-xs-12 text-center reset-password-box">
            <p>Enter your email address below, and we will send new password to you.</p>
            <br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-9">
                            <a href="../Home" class="btn btn-default pull-right">Back</a>
                        </div>
                        <div class="col-md-3">
                            <input type="submit" value="Reset" class="btn btn-primary pull-right" />
                        </div>
                    </div>
                </div>
            }

            
        </div>
    </div>
</div>

